<h1>Users#show</h1>

<% if flash[:notice] %>
  <p class='greeting'><%= flash[:notice] %></p>
<% end %>

<h2><%= @user.username %></h2>

<% @user.pictures.each do |p| %>
	<%= link_to image_tag(p.url, size: "300x300", class: "grid"), picture_path(p) %>
<% end %>

<% if current_user == @user %>
<!--
	- create new picture (link)
	- delete picture
	- tag picture?
-->
	<%= link_to 'Edit My Account', edit_user_path %>
	<%= button_to 'Delete Account', user_path, method: :delete, data: { confirm: 'For sure??' } %>
<% end %>
