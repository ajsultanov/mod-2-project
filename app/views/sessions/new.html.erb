<h1>Log in (Sessions#new)</h1>

<% if flash[:notice] %>
  <p class='notice'><%= flash[:notice] %></p>
<% end %>

<%= form_tag login_path do %>

	<%= label_tag :username, "Username:" %><br/>
	<%= text_field_tag :username %><br/><br/>

	<%= label_tag :password, "Password:" %><br/>
	<%= password_field_tag :password %><br/><br/>

	<%= submit_tag 'Log in' %>
<% end %>

<p>New user? <%= link_to "Sign up!", signup_path %></p>
