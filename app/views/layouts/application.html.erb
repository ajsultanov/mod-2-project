<!DOCTYPE html>
<html>
  <head>
    <title>Mod2Project</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

		<% if logged_in? %>
		  <%= "welcome" %>
		  <%= "sign out" %>
		<% else %>
		  <%= "sign up" %>
		  <%= "sign in" %>
		<% end %>

    <%= yield %>
  </body>
</html>
