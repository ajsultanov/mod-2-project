<!DOCTYPE html>
<html>
  <head>
    <title>Mod2Project</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

		<% if logged_in? %>
		  <p><%= link_to 'Home', '/' %> /
			<%= link_to 'My Profile', "/users/#{current_user}"%> /
		  <%= link_to 'Log out', '/logout'%></p>
		<% else %>
		  <p><%= link_to 'Home', '/' %> /
		  <%= link_to 'Log in', '/login' %> /
			<%= link_to 'Sign up', '/signup' %></p>
		<% end %>

    <%= yield %>
  </body>
</html>
